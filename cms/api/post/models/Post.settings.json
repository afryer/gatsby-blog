{
  "connection": "default",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": "blog post"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "title": {
      "default": "",
      "unique": true,
      "type": "string",
      "required": true
    },
    "content": {
      "default": "",
      "type": "text"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "author": {
      "model": "user",
      "via": "posts",
      "plugin": "users-permissions"
    }
  }
}